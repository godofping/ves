
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    >
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            >

			//control panel
            <TextView
                android:text="Control Panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"/>
			//end control panel


			//box 1
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:cardBackgroundColor="#2c364c"
               
				/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
					    >

				

                    <TextView
                        android:text="Set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="35sp"
                    />

				    <TextView
                        android:text="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvSetTeamAValue"
                        android:textAlignment="center"
                        android:textSize="70sp"
					    android:textColor="#000"
                        android:layout_marginTop="-20dp"
                    />


				    </LinearLayout>

            </android.support.v7.widget.CardView>
			//end box 1

            //box 2
            
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:cardBackgroundColor="#c3b091"
               
				/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
					>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                            android:text="Team Name: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:paddingTop="15dp"
                            />
                            
                            <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamAName"
                            android:textSize="25sp"/>
                        </TableRow>

                    </TableLayout>

                    <TableLayout
                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
            
                            <TextView
                            android:text="Won Set: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamAWonSet"
                            android:textSize="25sp"/>
                        </TableRow>

                    </TableLayout>

                    <TableLayout
                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="2">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
             
                            <TextView
                                android:layout_column="1"
                            android:text="Score: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                                android:layout_column="2"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamAScore"
                            android:textSize="25sp"/>

                            <Button
                                android:layout_column="3"
                            android:text="+"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/btnTeamAAddScore"/>
                       

                            <Button
                                android:layout_column="4"
                            android:text="-"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/btnTeamAMinusScore" />

                  </TableRow>

                    </TableLayout>

                    <TableLayout
                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="2"
                        >

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                            android:text="Timeout: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_column="1"
                            />
                            
                            <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamATimeout"
                            android:textSize="25sp"
                            android:layout_column="2"
                            />

                            <Button
                            android:text="+"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/tvTeamAAddTimeout"
                            android:layout_column="3"
                            
                            />
                       

                            <Button
                            android:text="-"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/tvTeamAMinusTimeout"
                            android:layout_column="4"
                            />

                        </TableRow>
        

                    </TableLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>
			//end box 2



             //box 3
            
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:cardBackgroundColor="#00ff7f"
               
				/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
					>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                            android:text="Team Name: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:paddingTop="20dp"
                            android:layout_column="1"
                            />
                            
                            <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamBName"
                            android:textSize="25sp"
                            android:layout_column="2" />
                        
                        </TableRow>

             

                    </TableLayout>

                    <TableLayout
                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    
                            <TextView
                                android:layout_column="1"
                            android:text="Won Set: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                                android:layout_column="2"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamBWonSet"
                            android:textSize="25sp"/>

                        </TableRow>


                    </TableLayout>

                    <TableLayout
                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="2">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                    
                            <TextView
                                android:layout_column="1"
                            android:text="Score: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                                android:layout_column="2"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamBScore"
                            android:textSize="25sp"/>

                            <Button
                                android:layout_column="3"
                            android:text="+"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/btnTeamBAddScore"/>
                       

                            <Button
                                android:layout_column="4"
                            android:text="-"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/btnTeamBMinusScore" />

                        </TableRow>
                    
                    </TableLayout>

                    <TableLayout
                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="2">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                   
                            <TextView
                                android:layout_column="1"
                            android:text="Timeout: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                                android:layout_column="2"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamBTimeout"
                            android:textSize="25sp"/>

                            <Button
                                android:layout_column="3"
                            android:text="+"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/tvTeamBAddTimeout"/>
                       

                            <Button
                                android:layout_column="4"
                            android:text="-"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/tvTeamBMinusTimeout" />

                   </TableRow>

                    </TableLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>
			//end box 3
           

            <TableLayout   
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:paddingTop="20dp"
            >

            <Button
            android:text="Match Information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMMatchInformation" />

            <Button
            android:text="End Set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEndSet" />

            <Button
            android:text="Save Match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaveMatch" />

            <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnReset" />

             </TableLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>