
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    >
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

			//control panel
            <TextView
                android:text="Control Panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"/>
			//end control panel


			//box 1
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:cardBackgroundColor="#2c364c"
               
				/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
					>

				

                <TextView
                    android:text="Set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="35sp"
                />

				<TextView
                    android:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSetTeamAValue"
                    android:textAlignment="center"
                    android:textSize="70sp"
					android:textColor="#000"
                    android:layout_marginTop="-20dp"
                />


				</LinearLayout>

            </android.support.v7.widget.CardView>
			//end box 1

            //box 2
            
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:cardBackgroundColor="#c3b091"
               
				/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
					>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">

                        <TableRow>
                            <TextView
                            android:text="Team Name: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamAName"
                            android:textSize="25sp"/>



                         </TableRow>

                    </TableLayout>

                    <TableLayout
                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">

                        <TableRow>
                            <TextView
                            android:text="Won Set: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamAWonSet"
                            android:textSize="25sp"/>



                         </TableRow>

                    </TableLayout>

                    <TableLayout
                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">

                        <TableRow>
                            <TextView
                            android:text="Score: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamAScore"
                            android:textSize="25sp"/>

                            <Button
                            android:text="+"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/btnTeamAAddScore"/>
                       

                            <Button
                            android:text="-"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/btnTeamAMinusScore" />

                         </TableRow>

                    </TableLayout>

                    <TableLayout
                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">

                        <TableRow>
                            <TextView
                            android:text="Timeout: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamATimeout"
                            android:textSize="25sp"/>

                            <Button
                            android:text="+"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/tvTeamAAddTimeout"/>
                       

                            <Button
                            android:text="-"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/tvTeamAMinusTimeout" />

                         </TableRow>

                    </TableLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>
			//end box 2



             //box 3
            
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:cardBackgroundColor="#00ff7f"
               
				/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
					>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">

                        <TableRow>
                            <TextView
                            android:text="Team Name: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamBName"
                            android:textSize="25sp"/>



                         </TableRow>

                    </TableLayout>

                    <TableLayout
                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">

                        <TableRow>
                            <TextView
                            android:text="Won Set: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamBWonSet"
                            android:textSize="25sp"/>



                         </TableRow>

                    </TableLayout>

                    <TableLayout
                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">

                        <TableRow>
                            <TextView
                            android:text="Score: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamBScore"
                            android:textSize="25sp"/>

                            <Button
                            android:text="+"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/btnTeamBAddScore"/>
                       

                            <Button
                            android:text="-"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/btnTeamBMinusScore" />

                         </TableRow>

                    </TableLayout>

                    <TableLayout
                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">

                        <TableRow>
                            <TextView
                            android:text="Timeout: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"/>
                            
                            <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTeamBTimeout"
                            android:textSize="25sp"/>

                            <Button
                            android:text="+"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/tvTeamBAddTimeout"/>
                       

                            <Button
                            android:text="-"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/tvTeamBMinusTimeout" />

                         </TableRow>

                    </TableLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>
			//end box 3


        </LinearLayout>

    </ScrollView>




</LinearLayout>